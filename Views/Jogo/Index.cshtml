@model IEnumerable<BolaoApp.Models.Jogo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rodada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdMandante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GolsMandante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdVisitante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GolsVisitante)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rodada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdMandante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GolsMandante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdVisitante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GolsVisitante)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
